{
  "name": "@devfe/joshua",
  "version": "0.0.2",
  "main": "dist/joshua.min.css",
  "scripts": {
    "start": "parcel src/template/page-*.njk -p 8989",
    "sass": "parcel watch src/joshua.scss",
    "grid": "node bin/generate-grid.js > src/sass/_grid-col.scss",
    "clean": "rm -rf dist",
    "build:css": "parcel build src/joshua.scss && cleancss -o dist/joshua.min.css dist/joshua.css",
    "build:js": "cp src/joshua.js dist/joshua.js && ./node_modules/.bin/uglifyjs src/joshua.js > dist/joshua.min.js",
    "build": "yarn clean && yarn build:css && yarn build:js",
    "size": "size-limit"
  },
  "size-limit": [
    { "path": "dist/joshua.min.css" },
    { "path": "dist/joshua.min.js" }
  ],
  "devDependencies": {
    "clean-css": "^4.2.1",
    "clean-css-cli": "^4.3.0",
    "nunjucks": "^3.2.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-nunjucks": "^1.1.0",
    "rework": "^1.0.1",
    "rework-pure-grids": "^1.0.0",
    "sass": "^1.17.3",
    "size-limit": "^1.0.1",
    "uglify-es": "^3.3.9"
  }
}
