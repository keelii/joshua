{% extends "layout.njk" %}

{% block body %}

{% set active = 'button' %}
{% include "nav.njk" %}

{% macro col(num) %}
    {% for item in range(num) %}
    <div> <div class="demo">col {{ item + 1 }}</div> </div>
    {% endfor %}
{% endmacro %}

{{ lorem() }}

<fieldset>
    <legend>Buttons</legend>
    <input type="button" value="input:button" />
    <button>button</button>
    <a href="#none" class="button">a.button</a>
    <span class="button">span.button</span>
</fieldset>

{{ lorem() }}

<fieldset>
    <legend>Sizes</legend>
    {% for item in grid.breakpoints %}
        <p>
        {% for type in input.button %}
            <input class="{{ item.prefix }}" type="{{ type }}" value="{{ item.name }}">
        {% endfor %}
            <button class="{{ item.prefix }}">button</button>
            <a href="#none" class="button {{ item.prefix }}">a.button</a>
        </p>
    {% endfor %}
</fieldset>

{{ lorem() }}

<fieldset>
    <legend>Buttons: .outline</legend>
    {% for item in grid.breakpoints %}
        <p >
        {% for type in input.button %}
            <input class="outline {{ item.prefix }}" type="{{ type }}" value="{{ type }}">
        {% endfor %}
            <button class="outline {{ item.prefix }}">button</button>
            <a href="#none" class="button outline {{ item.prefix }}">a.button</a>
        </p>

    {% endfor %}
</fieldset>

{{ lorem() }}

{% endblock body %}