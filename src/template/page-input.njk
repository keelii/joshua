{% extends "layout.njk" %}

{% block body %}

{% set active = 'input' %}
{% include "nav.njk" %}
{% include "breakpoint.njk" %}

{% Row %}
    {% Col default=[1,2] %}
    {% endCol %}
{% endRow %}


<fieldset>
    <legend>Input: text</legend>

    {% Row %}
        {% for item in input.text %}
            {% Col default=[1, 4] %}
                <input type="{{ item }}" placeholder="{{ item }}"/>
            {% endCol %}
        {% endfor %}
    {% endRow %}
</fieldset>


<fieldset>
    <legend>Input: .full-width</legend>
    {% Row %}
        {% for item in input.text | max(4) %}
            {% Col default=[1, 2] %}
                <input class="full-width" type="{{ item }}" placeholder="{{ item }}" />
            {% endCol %}
        {% endfor %}
    {% endRow %}
</fieldset>

<fieldset>
    <legend>Input: time</legend>

    {% Row %}
        {% for item in input.time %}
            {% Col default=[1, 5] %}
                <input type="{{ item }}" placeholder="{{ item }}"/>
            {% endCol %}
        {% endfor %}
    {% endRow %}
</fieldset>

<fieldset>
    <legend>Input: .small</legend>

    {% Row %}
        {% for item in input.text %}
            {% Col default=[1, 4] %}
                <input class="small" type="{{ item }}" placeholder="{{ item }}" />{% endCol %}
        {% endfor %}
        {% for item in input.text %}
            {% Col default=[1, 4] %}
                <input class="full-width small" type="{{ item }}" placeholder="{{ item }}" />{% endCol %}
        {% endfor %}
    {% endRow %}

</fieldset>

{% endblock body %}