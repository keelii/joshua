{% extends "layout.njk" %}

{% block body %}

{% set active = 'grid' %}
{% include "nav.njk" %}
{% include "breakpoint.njk" %}

{% macro demo(numerator, denominator) %}
    {% Col default=[numerator, denominator] %}
        <div class="demo">
        {% if numerator == 1 and not denominator %}
            {{ grid.col }}-{{ numerator }}
            <small>.{{ grid.col }}-{{ numerator }}</small>
        {% else %}
            {{ numerator }}/{{ denominator }}
            <small>.{{ grid.col }}-{{ numerator }}-{{ denominator }}</small>
        {% endif %}
        </div>
    {% endCol %}
{% endmacro %}

<fieldset>
    <legend>Basics: 5 columns</legend>
    {% Row %}
        {% for item in range(5) %}
            {{ demo(1, 5) }}
        {% endfor %}
        {{ demo(2, 5) }}
        {{ demo(2, 5) }}
        {{ demo(1, 5) }}
       
        {{ demo(3, 5) }}
        {{ demo(1, 5) }}
        {{ demo(1, 5) }}

        {{ demo(3, 5) }}
        {{ demo(2, 5) }}

        {{ demo(4, 5) }}
        {{ demo(1, 5) }}
    {% endRow %}
</fieldset>

<fieldset>
    <legend>Basics: 12 columns</legend>
    {% Row %}
        {{ demo(1) }}
        {% for item in range(11) %}
            {{ demo(item + 1, 12) }}
            {{ demo(12 - item - 1, 12) }}
        {% endfor %}
    {% endRow %}
</fieldset>

<fieldset>
    <legend>Nested grids</legend>
    {% Row %}
        {% Col default=[1, 2] %}
            <div class="demo">
                left
                {% Row %}
                    {{ demo(1, 3) }}
                    {{ demo(1, 3) }}
                    {{ demo(1, 3) }}
                    {{ demo(1, 2) }}
                    {{ demo(1, 2) }}
                {% endRow %}
            </div>
        {% endCol %}
        {% Col default=[1, 2] %}
            <div class="demo">
                right
                {% Row %}
                    {{ demo(1, 3) }}
                    {{ demo(1, 3) }}
                    {{ demo(1, 3) }}
                    {{ demo(1, 2) }}
                    {{ demo(1, 2) }}
                {% endRow %}
            </div>
        {% endCol %}
    {% endRow %}
</fieldset>

<fieldset>
    <legend>Equal columns:</legend>
    {% Row %}
        {% for item in [1, 2, 3, 4, 5, 6, 12] %}
            {% set r = (12/item) if (12 % item == 0) else 5  %}
            {% for col in range(r) %}
                {{ demo(1, r) }}
            {% endfor %}
        {% endfor %}
    {% endRow %}
</fieldset>

<fieldset>
    <legend>No Gutters: .no-gutter</legend>
    {% Row gutter=false %}
        {% for item in [1, 2, 3, 4, 5, 6, 12] %}
            {% set r = (12/item) if (12 % item == 0) else 5  %}
            {% for col in range(r) %}
                {{ demo(1, r) }}
            {% endfor %}
        {% endfor %}
    {% endRow %}
</fieldset>

<fieldset>
    <legend>Responsive columns:</legend>
    {% Row %}
        {% for item in range(6) %}
            {% Col default=[1,3], sm=[1], md=[1,2], lg=[1,3], xl=[1,6] %}
                <div class="demo demo1">
                    <p><span>default</span> <small>.{{ grid.col }}-1-3</small></p>
                    <p><span>small</span> <small>.{{ grid.col }}-sm-1</small></p>
                    <p><span>medium</span> <small>.{{ grid.col }}-md-1-2</small></p>
                    <p><span>large</span> <small>.{{ grid.col }}-lg-1-3</small></p>
                    <p><span>x-large</span> <small>.{{ grid.col }}-xl-1-6</small></p>
                </div>
            {% endCol %}
        {% endfor %}
    {% endRow %}

    <style>
    .demo1 p {
        text-align: left;
    }
    .demo1 p * {
        display: inline-block;
    }
    .demo1 p span {
        width: 4em;
        text-align: right;
        margin-left: 1em;
        text-decoration: underline;
    }
    @media screen and (min-width: 35.5em) {
        .demo1 p span {
            margin-left: 13em;
        }
    }
    @media screen and (min-width: 48em) {
        .demo1 p span {
            margin-left: 7em;
        }
    }
    @media screen and (min-width: 64em) {
        .demo1 p span {
            margin-left: 8em;
        }
    }
    @media screen and (min-width: 80em) {
        .demo1 p span {
            margin-left: 1em;
        }
    }
    </style>
</fieldset>

{% endblock body %}